# tidyr
install.packages("tidyr")
library(tidyr)
df <- data.frame(
  Name = c("A", "B"), Maths = c(80, 90), Sci = c(70, 85)
)
long_df <- gather(df, Subject, Marks, c(Maths, Sci))
print(long_df)

