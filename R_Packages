install.packages("ggplot2") 
library(ggplot2)
ggplot(data = mtcars, aes(x = hp, y = mpg)) +
  geom_point(color = "blue", size = 3) +
  labs(title = "Miles per Gallon vs Horsepower",
       x = "Horsepower",
       y = "Miles per Gallon")

---------------------------------------------------------

install.packages("glue") 
library(glue)
a <- 10
b <- 20
sum <- a + b
message <- glue("The sum of {a} and {b} is {sum}.")
print(message)

---------------------------------------------------------

install.packages(“ggraph”) 
library(ggraph) 
library(igraph) 
graph <- make_ring(3) 
# Plot the graph 
ggraph(graph, layout = "circle") + geom_edge_link() +           
geom_node_point(size = 5, color = "blue") +   
ggtitle("Simple 3-Node Ring Graph") 

